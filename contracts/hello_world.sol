contract Todos {
  struct Todo {
    string content;
    bool completed;
  }

  Todo[] public todos;

  function create(string memory _content) public {
    todos.push(Todo(_content, false));
  }

  function get(uint _index) public view returns (string memory content, bool completed) {
    Todo storage todo = todos[_index];
    return (todo.content, todo.completed);
  }

  function update(uint _index, string memory _content ) public {
    Todo storage todo = todos[_index];
    todo.content = _content;
  }

  function toggleCompleted(uint _index) public {
    Todo storage todo = todos[_index];
    todo.completed = !todo.completed;
  }
}